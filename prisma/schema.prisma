// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Message {
  id              String   @id @default(cuid())
  workerId        String
  spanishRaw      String   // Original speech-to-text
  englishRaw      String   // Cerebras translation
  englishFormatted String  // Claude reformatted for supervisor
  category        String   // delay_report | clarification | completion | safety
  urgency         String   // normal | high
  twilioSid       String?  // For reply threading
  createdAt       DateTime @default(now())
  
  replies         SupervisorReply[]
}

model SupervisorReply {
  id            String   @id @default(cuid())
  messageId     String
  message       Message  @relation(fields: [messageId], references: [id], onDelete: Cascade)
  englishRaw    String
  spanishTrans  String
  actionSummary String   // Claude-extracted bullets
  createdAt     DateTime @default(now())
  
  @@index([messageId])
}
